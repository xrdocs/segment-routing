      "tags": "{% for tag in post.tags %}{{ tag }}{% unless forloop.last %}, {% endunless %}{% endfor %}"
    }
    {% endif %}
    {% unless forloop.last %}{% unless post.position == "hidden" or post.published == "false" %},{% endunless %}{% endunless %}
  {% endfor %}
{% unless techdoc_cnt == 0 %},{% endunless %}




